@inherits LayoutComponentBase

<FluentDialogProvider />

<FluentLayout>
    <FluentHeader>
        <FluentSpacer />
        <AuthorizeView>
            <Authorized>
                <FluentButton OnClick="LogOut">Log out</FluentButton>
            </Authorized>
            <NotAuthorized>
                <FluentButton OnClick="GoToLogin">Log in</FluentButton>
            </NotAuthorized>
        </AuthorizeView>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <FluentBodyContent Class="body-content">
            <ErrorBoundary>
                <ChildContent>
                    <div class="content">
                        @Body
                    </div>
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        @SourceRevisionId - <a href="https://github.com/CorruptComputer/BlazorWasmOsmOauth" target="_blank">Source Code</a>
        <FluentSpacer />
        <a href="https://github.com/CorruptComputer/BlazorWasmOsmOauth/issues" target="_blank">Have an issue?</a>
    </FluentFooter>
</FluentLayout>
